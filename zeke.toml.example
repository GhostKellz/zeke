# Zeke Configuration File
# Copy to ~/.config/zeke/zeke.toml to customize

[ui]
# Tokyo Night theme variant
# Options: "night" (default), "moon" (softer), "storm" (warmer)
theme = "night"

[providers]
# Default provider for requests
# Options: openai, claude, github_copilot, google, xai, azure, ollama
default = "github_copilot"

# Provider-specific settings
[providers.github_copilot]
enabled = true
default_model = "gpt-5-codex"

[providers.claude]
enabled = true
default_model = "claude-sonnet-4.5"

[providers.openai]
enabled = true
default_model = "gpt-4o"

[providers.google]
enabled = true
default_model = "gemini-2.5-pro"

[providers.ollama]
enabled = true
default_model = "qwen2.5-coder:7b"
endpoint = "http://localhost:11434"

[routing]
# Smart routing based on task type
enable_smart_routing = true

# Task-specific provider preferences
[routing.tasks]
code_completion = "github_copilot"
code_review = "claude"
reasoning = "claude"
chat = "openai"
fast_response = "ollama"

[performance]
# Request timeout in milliseconds
timeout_ms = 30000

# Enable caching
enable_cache = true

# Maximum concurrent requests
max_concurrent = 5

[security]
# Store API keys in system keyring (recommended)
use_keyring = true

# Allow insecure connections (not recommended)
allow_insecure = false
